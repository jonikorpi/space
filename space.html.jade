body

template(name="layout")
  +yield
  
template(name="home")
  h1 
    a(href="/") Starlifter
    
  button.start-fleet(type="button") Start a fleet
  
  ul
    each fleets
      li
        a(href=_id) #{_id}
  

template(name="game")
  .game.abs-all.no-margins(id=_id)
    .game-header.abs-top-left
      h1 
        a(href="/") Starlifter
        span â€”
        a(href=_id) Fleet ##{_id}
    
    +backdrop(xPos=xPos yPox=yPos)
    
    .grid-container.no-margins.abs-all
      .grid.abs-all
        +fleet
        
template(name="backdrop")
  .backdrop.abs-all
  .dimmer.abs-all
  .layer.layer-1.abs-all($dyn=layerOne)
  .layer.layer-2.abs-all($dyn=layerTwo)
  .layer.layer-3.abs-all($dyn=layerThree)
  .layer.layer-4.abs-all($dyn=layerFour)
  .layer.layer-5.abs-all($dyn=layerFive)
  
template(name="fleet")
  .fleet.abs-all
    .fleet-base.abs-all
    .fleet-shadow.abs-all
    .fleet-model.abs-all #{xPos} #{yPos}
    +fleetControls

