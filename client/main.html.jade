template(name="layout")
  +yield
  
template(name="notFound")
  +header
  h1 Fleet not found
  
template(name="loading")
  +header
  h1 Loadingâ€¦
  
template(name="home")
  +header
  h1 Hello!
  
template(name="header")
  .header.abs-top-left.no-margins
    strong
      a(href="/") Starlifter
    button.button.start-fleet(type="button") New fleet
    
template(name="status")
  .status-bar.abs-bottom
    with fleetStatus
      span
        strong #{name}
      span #{loc}
  
template(name="views")
  .views.abs-top-right
    button.button(type="button" data-button-value="map" $dyn=mapButton) [1] Map
    button.button(type="button" data-button-value="area" $dyn=areaButton) [2] Area
    button.button(type="button" data-button-value="fleet" $dyn=fleetButton) [3] Fleet

template(name="game")
  .hud.abs-top.no-margins
    +header
    +views
  .hud.abs-bottom
    +status
  .game.abs-all.no-margins(id=_id $dyn=gameAttributes)
    
    .backdrop.abs-all
      +backdrop(xPos=xPos yPox=yPos)
    
    .movement-controls.abs-all
    
    .map.grid-container.no-margins.abs-all
      .grid.abs-all
        each mapStars
          +mapStar
        each mapPlanets
          +mapPlanet
    
    .world.grid-container.no-margins.abs-all
      .grid.abs-all
        .entity#sizer-entity
        each stars
          +star
        each planets
          +planet
        each loots
          +loot
        each otherFleets
          +fleet
          
    .player.grid-container.no-margins.abs-all
      .grid.abs-all
        .movement-pointer
        +fleet
        
    +cheats
        
