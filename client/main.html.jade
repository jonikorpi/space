template(name="fleet")
  .fleet.entity.rendering-in($dyn=fleetAttributes)
    .entity-name.fleet-name #{name}
    .fleet-model.entity-model.pos-all($dyn=fleetModelAttributes)
      .ships.pos-all
        each ships
          .ship
            each this
              .module(data-module-id=this)
    .debug-dialog 
      strong #{name}
      .debug-line
        strong Secret
        span #{secretUrl}
      .debug-line
        strong Invite code
        span #{secretInvite}
      .debug-line
        strong Started
        span #{createdAt}
      .debug-line
        strong Last Move
        span #{lastMove}
      .debug-line
        strong ID
        span #{_id}
      .debug-line
        strong lastLoc 
        span #{lastLoc}
      .debug-line
        strong Loc 
        span #{loc}
      .debug-line
        strong Energy
        span #{energy}
      
