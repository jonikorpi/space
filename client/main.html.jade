  .star.entity.rendering-in($dyn=starAttributes)
    .star-scaler.pos-all($dyn=starScaling)
      .entity-name.star-name.pos-center-top-left.translate-half-up-left #{name}
      .star-model.entity-model.pos-all($dyn=starModel)
    .debug-dialog
